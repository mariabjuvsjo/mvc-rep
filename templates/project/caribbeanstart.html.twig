{# templates/project/caribbeanstart.html.twig #}

{% extends "project/basepro.html.twig" %}
{% block title %}
	Poker | Start
{% endblock %}

{% block content %}
	<div class="dealer">
		<p>Dealer Cards</p>
	</div>
	<div class="poker-table">
		<div class="dealer-cards">
			{% for card in dealer %}
				<div class="outline shadow rounded" style="color:{{card.color}}">
					<div class="top">
						<span>{{card.value}}</span>
						<span>{{card.suit | raw}}</span>
					</div>
					<h1 style="color: {{card.color}}">{{card.suit | raw}}</h1>
					<div class="bottom">
						<span>{{card.value}}</span>
						<span>{{card.suit | raw}}</span>
					</div>
				</div>
			{% endfor %}
		</div>
		<div class="your-cards">
			{% for card in player %}
				<div class="outline shadow rounded" style="color:{{card.color}}">
					<div class="top">
						<span>{{card.value}}</span>
						<span>{{card.suit | raw}}</span>
					</div>
					<h1 style="color: {{card.color}}">{{card.suit | raw}}</h1>
					<div class="bottom">
						<span>{{card.value}}</span>
						<span>{{card.suit | raw}}</span>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
	<div class="player-bet">
		<p>User Cards</p>
		<p>User money:
		</p>
	</div>

	<form>
		<input type="submit" name="fold" value="FOLD">
		<input type="submit" name="join" value="JOIN">
	</form>

{% endblock %}
